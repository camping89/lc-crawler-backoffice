@page
@using Microsoft.AspNetCore.Mvc.Localization
@using LC.Crawler.BackOffice.Localization
@using LC.Crawler.BackOffice.Web.Pages.CrawlerProxies
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using LC.Crawler.BackOffice.CrawlerProxies;
@using System.Globalization
@inject IHtmlLocalizer<BackOfficeResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CrawlerProxies/EditModal" autocomplete="off">
    <abp-modal id="CrawlerProxyEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="CrawlerProxy.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="CrawlerProxy.Ip"/>

            <abp-input asp-for="CrawlerProxy.Port"/>

            <abp-input asp-for="CrawlerProxy.Protocol"/>

            <abp-input asp-for="CrawlerProxy.Username"/>

            <abp-input asp-for="CrawlerProxy.Password"/>

            <abp-input asp-for="CrawlerProxy.PingedAt" value="@(Model.CrawlerProxy.PingedAt?.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="CrawlerProxy.IsActive"/>

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>